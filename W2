#include <iostream>
using namespace std;
int main() {
	setlocale(0, "");
	int number;
	int summ = 0;
	cout << "[ + ] Введите число: ";
	cin >> number;
	while (number <= 0)
	{
		cout << "Число меньше или равно нулю. Введите другое: ";
		cin >> number;
	}
	while (number != 0)
	{
		cout << "Отсчет: " << number << endl;
		number = number - 1;
	}
	cout << "[ + ] Старт!";
	return 0;
}
